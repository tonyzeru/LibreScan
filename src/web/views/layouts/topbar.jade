          a(href='/language/spa')= _('tb_spanish_lang')
      option(value='english_lang')
          a(href='/language/en')= _('tb_english_lang')
      option(value='portuguese_lang')
          a(href='/language/pt', disabled='disabled')= _('tb_portuguese_lang')
      option(value='guarani_lang')
          a(href='/language/gn', disabled='disabled')= _('tb_guarani_lang')


