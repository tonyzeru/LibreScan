          a(href='#')= _('tb_how_to_scan')
      option(value='chdk_installation')
          a(href='#')= _('tb_chdk_installation')
      option(value='set_scanner')
          a(href='#')= _('tb_set_scanner')


    select#select-languages(data-placeholder='true', data-native-menu="false")
      option
          a(href='#')=  _('tb_languages')
